<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/item_raspi_control_tv_border"
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:layout_margin="@dimen/marginBase"
        android:background="@drawable/border"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp" >

            <TextView
                android:id="@+id/item_raspi_control_tv_above_bg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="0.28"
                android:background="@color/lightblue"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/item_raspi_control_img_monitor"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_raspi_on" />

            <TextView
                android:id="@+id/item_raspi_control_tv_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:textSize="40sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/item_raspi_control_tv_under_bg"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_weight="0.12"
                android:background="@color/deepblue"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <LinearLayout
                android:id="@+id/item_raspi_control_ln_camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/item_raspi_control_img_camera"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="@dimen/marginBase"
                    android:layout_marginLeft="@dimen/marginBasex2"
                    android:layout_marginRight="@dimen/marginBasex2"
                    android:layout_marginTop="@dimen/marginBase"
                    android:src="@drawable/icon_camera" />

                <TextView
                    android:id="@+id/item_raspi_control_tv_camera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</FrameLayout>
